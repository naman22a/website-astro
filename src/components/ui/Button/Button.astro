---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
    className: string;
}
const { className, ...props } = Astro.props;
---

<button
    class={'mt-7 border-b-2 border-b-ctp-red pb-2 uppercase tracking-wider font-semibold transition-all duration-400 hover:bg-ctp-red pr-3 pt-1 hover:pl-3 group text-base' +
        ` ${className}`}
    {...props}
>
    <span class="group-hover:-translate-y-3">
        <slot />
    </span>
</button>
